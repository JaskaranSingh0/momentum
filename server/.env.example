# Environment Variables Template

# Copy this file to .env and fill in your actual values

# MongoDB Connection (use MongoDB Atlas for production)
MONGO_URI=mongodb://127.0.0.1:27017/momentum

# Session Secret (generate a random secure string for production)
SESSION_SECRET=dev_secret_change_me

# Client URL (frontend URL)
CLIENT_URL=http://localhost:5173

# Google OAuth Credentials (get from Google Cloud Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Server Port
PORT=3001

# Node Environment
NODE_ENV=development
