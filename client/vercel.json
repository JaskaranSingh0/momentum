{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://momentum-server.onrender.com/api/:path*" },
    { "source": "/auth/:path*", "destination": "https://momentum-server.onrender.com/auth/:path*" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
